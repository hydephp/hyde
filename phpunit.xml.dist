<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false">
    <testsuites>
        <testsuite name="Feature">
            <directory suffix="Test.php">./tests/Feature</directory>
        </testsuite>
        <testsuite name="Unit">
            <directory suffix="Test.php">./tests/Unit</directory>
        </testsuite>
        <testsuite name="Validators">
            <directory suffix="Test.php">./tests/Validators</directory>
        </testsuite>
    </testsuites>
    <coverage processUncoveredFiles="true">
        <include>
            <directory suffix=".php">./packages/framework/src</directory>
        </include>
    </coverage>
    <groups>
        <exclude>
            <group>validators</group>
        </exclude>
    </groups> 
    <php>
        <env name="ENV" value="testing"/>
    </php>
    <listeners>
        <listener class="\Hyde\Testing\TestListener" />
    </listeners>
</phpunit>
